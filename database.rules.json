{
  "rules": {
    "maps": {
      "$mapName": {
        ".read": "!data.exists() || root.child('maps/' + $mapName + '/public').val() === true || root.child('maps/' + $mapName + '/owner').val() === auth.uid",
        ".write": "!data.exists() || root.child('maps/' + $mapName + '/public').val() === true || root.child('maps/' + $mapName + '/owner').val() === auth.uid"
      }
    }
  }
}
